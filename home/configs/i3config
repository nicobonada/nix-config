#start of bar section
bar {
    tray_output primary
    position bottom
    separator_symbol "│"
    status_command py3status -c ~/.config/i3status/$(hostname)
    # font pango:Fira Code,Font Awesome 5 Free 11
    font pango:FiraCode Nerd Font 11
    colors {
        # bar background color
        background $Crust
        # text color used for blocks that do not have a color specified.
        statusline $Text

        # workspaces section
        #                  border  backgr. text
        focused_workspace  $Maroon $Maroon $Base
        inactive_workspace $Maroon $Base   $Maroon
        active_workspace   $Base   $Blue   $Base
        urgent_workspace   $Red    $Red    $Text
    }
}
#end of bar section

